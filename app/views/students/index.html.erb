<h3 class="page-header"><%= tm @students, 2 %></h3>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-10 col-sm-8">
            <h4 class="no-margin">
              <%= fa_icon :users %> Ver todos
            </h4>
          </div>
          <div class="col-xs-2 col-sm-4 text-right">
            <%= link_to new_student_path, class: 'btn btn-xs btn-primary', title: :adicionar do %>
              <%= fa_icon :plus %> <span class="hidden-xs">adicionar</span>
            <% end %>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <% if @students.present? %>
          <table class="table no-margin">
            <thead>
              <tr>
                <th>Nome <small>(sigla)</small></th>
                <th width="100" class="text-right">Ações</th>
              </tr>
            </thead>
            <tbody>
              <% @students.each do |student| %>
                <tr>
                  <td>
                    <h5>
                      <div><%= student.name %></div>
                      <small><%= student.description %></small>
                    </h5>
                  </td>
                  <td>
                    <div class="text-right">
                      <%= link_to edit_student_path(student), class: 'text-info bs-tooltip', title: :editar do %>
                        <%= fa_icon 'pencil' %>
                      <% end %>
                      <span class="text-danger bs-tooltip" data-title="apagar" data-toggle="modal" data-target="#student_destroy_<%= student.id %>">
                        <%= fa_icon 'times' %>
                      </span>
                    </div>

                    <%= bs_modal_confirm_destroy "student_destroy_#{student.id}", student_path(student) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <%= bs_alert :info, 'Nenhum estudante encontrado' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
